<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <!-- BASE LINK -->
    <link name="base_link">

    </link>

    <!-- CHASSIS LINK -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.16 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0 0 0.055"/>
            <geometry>
                <box size="0.55 0.50 0.085"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.055"/>
            <geometry>
                <box size="0.55 0.50 0.085"/>
            </geometry>
            <material name="white"/>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.55" y="0.5" z="0.085">
            <origin xyz="0 0 0.055" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- LEFT WHEEL -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.22 0" rpy="-1.57079632679 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.085" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.085" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.5" length="0.04" radius="0.085">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.22 0" rpy="-1.57079632679 0 0" />
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.085" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.085" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.5" length="0.04" radius="0.085">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- CASTER WHEELs -->

    <joint name="caster_wheel_joint_left" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel_left"/>
        <origin xyz="-0.20 0.20 -0.06"/>
    </joint>


    <link name="caster_wheel_left">
        <visual>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.03">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <joint name="caster_wheel_right_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel_right"/>
        <origin xyz="-0.20 -0.20 -0.06"/>
    </joint>


    <link name="caster_wheel_right">
        <visual>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.03">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>
    
</robot>
